{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "patch_pwsh_bleed": true,
    "blocks": [
        {
            "alignment": "left",
            "leading_diamond": "",
            "trailing_diamond": "",
            "segments": [
                {
                    "type": "session",
                    "style": "plain",
                    "foreground": "#62e756",
                    "background": "transparent",
                    "template": "\u256d\u2500"
                },
                {
                    "type": "root",
                    "style": "plain",
                    "foreground": "red",
                    "background": "transparent",
                    "template": " \uedcf "
                },
                {
                    "type": "os",
                    "style": "plain",
                    "foreground": "#62e756",
                    "background": "transparent",
                    "leading_diamond": "\ue0b6",
                    "template": " {{ .UserName }}@{{ .HostName }}"
                },
                {
                    "type": "path",
                    "style": "plain",
                    "foreground": "#62e756",
                    "background": "transparent",
                    "properties": {
                        "folder_separator_icon": "\\",
                        "home_icon": "\ueb06",
                        "style": "full"
                    },
                    "template": " {{ .Path }}"
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "git",
                    "style": "plain",
                    "foreground": "#62e756",
                    "background": "transparent",
                    "template": "\u2502 {{ .UpstreamIcon }} {{.HEAD}} {{if .BranchStatus }} {{ .BranchStatus }}{{ end }} {{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
                    "properties": {
                      "fetch_status": true,
                      "fetch_upstream_icon": true,
                      "fetch_stash_count": true,
                      "full_branch_path":true,
                      "untracked_modes": {
                      },
                      "source": "pwsh",
                      "mapped_branches": {
                        "feat/*": "\udb85\udcdf ",
                        "bug/*": "\ueaaf "
                      }
                    }
                }
            ],
            "type": "prompt"
        },
        {
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#62e756",
                    "background": "transparent",
                    "template": "\u2570\u2500"
                },
                {
                    "type": "time",
                    "style": "plain",
                    "foreground": "#62e756",
                    "background": "transparent",
                    "properties": {
                        "time_format": "<b>[2006-01-02 15:04:05]</b>"
                    },
                    "template": "{{ .CurrentDate | date .Format }}"
                },
                {
                    "type": "executiontime",
                    "style": "plain",
                    "background": "transparent",
                    "foreground": "#62e756",
                    "properties": {
                      "always_enabled": true
                    },
                    "template": " [{{ .FormattedMs }}]"
                },
                {
                    "type": "text",
                    "style": "plain",
                    "foreground": "#62e756",
                    "background": "transparent",
                    "properties": {
                        "always_enabled": true
                    },
                    "template": " \u276f"
                }
            ],
            "type": "prompt"
        }
    ],
    "console_title_template": "{{ .Shell }} in {{ .Folder }}",
    "final_space": true,
    "version": 2
}